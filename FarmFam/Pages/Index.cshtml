@page
@model SmartCrop.Pages.UpdateFarmModel

@{
    ViewData["Title"] = "Welcome To Smart Crop";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background-color: black;
            color: white;
            text-align: center;
            min-height: 100vh;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
        }

        #sun {
            border: 5px solid yellow;
            border-radius: 50%;
            width: 100px;
            height: 100px;
            background-color: yellow;
            display: inline-block;
            margin: 20px 0;
            position: relative;
        }

        .ray {
            position: absolute;
            width: 5px;
            height: 30px;
            background-color: yellow;
            transform-origin: bottom;
        }
    </style>
</head>
<body>

    <h1>Welcome To Smart Crop</h1>
    <div id="sun">
        <div class="ray" style="transform: rotate(0deg);"></div>
        <div class="ray" style="transform: rotate(45deg);"></div>
        <div class="ray" style="transform: rotate(90deg);"></div>
        <div class="ray" style="transform: rotate(135deg);"></div>
        <div class="ray" style="transform: rotate(180deg);"></div>
        <div class="ray" style="transform: rotate(225deg);"></div>
        <div class="ray" style="transform: rotate(270deg);"></div>
        <div class="ray" style="transform: rotate(315deg);"></div>
    </div>

    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core" style="color: lime;">building Web apps with ASP.NET Core</a>.</p>

    <div>
        <label for="farmId">Farm ID:</label>
        <input type="number" id="farmId" name="farmId">
        <button type="button" onclick="deleteFarm()">Delete Farm</button>
    </div>
    

    <div style="margin-top: 50px; background-color: #222; padding: 20px;">
        <h2 style="color: white;">Update Farm</h2>
        <form method="post">
            <input type="hidden" asp-for="Farm.Id" />
            <div>
                <label asp-for="Farm.Name" style="color: white;">Name:</label>
                <input asp-for="Farm.Name" class="form-control" />
            </div>
            <div>
                <label asp-for="Farm.Address" style="color: white;">Address:</label>
                <input asp-for="Farm.Address" class="form-control" />
            </div>

            <button type="submit" class="btn btn-success">Update Farm</button>
        </form>
    </div>
   
    <script>
        function deleteFarm() {
            var farmId = document.getElementById('farmId').value;
            if (!farmId) {
                alert('Please enter a Farm ID.');
                return;
            }

            fetch(`http://localhost:5078/api/Farms/DeleteFarm/${farmId}`, {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json',
                }
            })
                .then(response => {
                    if (response.ok) {
                        alert('Farm successfully deleted.');
                        document.getElementById('farmId').value = '';
                    } else {
                        alert('Failed to delete farm. Please ensure the farm ID is correct.');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('An error occurred while trying to delete the farm.');
                });
        }
    </script>

</body>
</html>
